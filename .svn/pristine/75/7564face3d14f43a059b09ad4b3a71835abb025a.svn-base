// 도수 기록 추가 --------------------------------------------------------------------------------

mtWaitingListBody.on("submit", "[id='mtStartCallForm']",function(event){
	event.preventDefault();
	console.log("호출버튼 눌렀다");
	
// 	let orderKey = $("#mtStartCallSubmit").data("orderkey");
// 	let mtwriter = $("#mtStartCallSubmit").data("mtwriter");
	
	let orderKey = "O00114";
	let mtwriter = "E00031";
	
	let data = {
			orderKey : orderKey, 
			mtwriter : mtwriter
	}

	$.ajax({
		method : "POST",
		url : "${pageContext.request.contextPath}/mtRecordInsert.do",
		data : JSON.stringify(data),
		contentType : 'application/json; charset=utf-8',
		dataType : "text",
		beforeSend: function (xhr) {   /*데이터를 전송하기 전에 헤더에 csrf값을 설정한다*/
		xhr.setRequestHeader("${_csrf.headerName}", "${_csrf.token}");
		}, 
		success : function(resp) {
			console.log("차트 생성 성공");

		},
		error: function (request, status, error) {
		console.log("code: " + request.status);
		console.log("message: " + request.responseText);
		console.log("error: " + error);
		}
		
	});
	
	return false;
	
});

